<!DOCTYPE html>
<html>
<head>
  <title>AuthenticationStart</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |name, message| %>
   <div class="flash-message flash-message-<%= name %>">
    <%= message %>
   </div>
  <% end %>

  <% if logged_in? %>
   <p> hi <%= current_user.email %>! </p>
   <%= link_to 'Logout', logout_path, method: :delete, data: {confirm: "Are you sure?"} %>
  <% else %>
   <%= link_to 'Please login', login_path %> or
   <%= link_to 'Create an Account', signup_path %>
  <% end %>

<%= yield %>

</body>
</html>
